// Prisma schema for MVP: User & Asset
// Database: PostgreSQL

generator client {
  provider        = "prisma-client-js"
  output          = "../node_modules/.prisma/client"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid()) // 使用UUID代替自增整数，提高安全性
  email        String?  @unique // 可选电子邮件，支持Supabase身份验证
  username     String   @unique
  passwordHash String
  displayName  String?  // 可选显示名称
  avatarUrl    String?  // 可选头像URL
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt // 添加更新时间戳
  assets       Asset[]

  @@index([email]) // 为常用查询添加索引
  @@index([username])
}

model Asset {
  id          String   @id @default(uuid()) // 使用UUID
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade) // 添加级联删除
  ownerId     String   // 更新为String类型以匹配User.id
  title       String   // 标题/说明（从ImageUploadModal中使用altText填充）
  prompt      String?  // AI生成提示（如果适用）
  mediaType   Int      // 0 = image, 1 = video
  fileUri     String   // Vercel Blob或其他存储的URL
  metadata    Json?    // 保留用于将来扩展（如图片尺寸、类型等）
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt // 添加更新时间戳
  isPublic    Boolean  @default(true) // 添加可见性控制

  @@index([ownerId, createdAt])
  @@index([mediaType, createdAt])
  @@index([isPublic, createdAt]) // 为公开内容查询添加索引
}
